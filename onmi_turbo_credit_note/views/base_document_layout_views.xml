<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_document_layout_form_inherit_export" model="ir.ui.view">
            <field name="name">base.document.layout.form.inherit.export</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_details']" position="after">
                    <field name="company_details_export" placeholder="Company Details for Export Invoice..."/>
                </xpath>
                <xpath expr="//field[@name='report_footer']" position="after">
                    <field name="report_footer_export" placeholder="Footer for Export Invoice..."/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
