<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="onmi_external_layout_standard_stock_identification_document_inherit"  inherit_id="onmi_turbo_identification_document.onmi_external_layout_standard_stock_identification_document">
             <xpath expr="//table/tr/td[3]/t/span" position="replace">
               
                <span t-field="o.num_identidication"/>
            </xpath>           
        </template>  


        <template id="onmi_report_identification_document_document_inherit"  inherit_id="onmi_turbo_identification_document.onmi_report_identification_document_document">
            <xpath expr="//table[3]/tbody/tr[@style='height:50px !important;']" position="replace">
              
              <tr>

              </tr>
           </xpath> 
           <xpath expr="//p[@style='page-break-after: always;'][1]" position="replace">
              
            <p></p>
         </xpath> 
         
         <xpath expr="//table[5]/tbody/t" position="replace">
            <tr>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>Bussiness Name/ Name:</strong>
                </td>
                <td colspan="3"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.name"/>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>NIF:</strong>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.vat"/>
                </td>
            </tr>
            <tr>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>NIMA:</strong>
                </td>
                <td colspan="3"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.nima"/>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>C.N.A.E.:</strong>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.cnae"/>
                </td>
            </tr>
            <tr>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>Address:</strong>
                </td>
                <td colspan="3"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.street"/>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>RPGR:</strong>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.rpgr"/>
                </td>
            </tr>
            <tr>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>City:</strong>
                </td>
                <td colspan="3"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.city"/>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>ZIP:</strong>
                </td>
                <td colspan="1"
                    style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.zip"/>
                </td>
            </tr>
            <tr>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>State:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.state_id.name"/>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>State 2:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.state_id.name"/>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>Country:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.country_id.name"/>
                </td>
            </tr>
            <tr>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>Telephone:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.phone"/>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>Mobile:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.mobile"/>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <strong>E-mail:</strong>
                </td>
                <td colspan="1" style="border:1px solid black; border-collapse: collapse; text-align: left;">
                    <span t-field="o.carrier_partner_id.email"/>
                </td>
            </tr>
            
         </xpath>   

       </template>

        <record id="paperformat_identification_document_123" model="report.paperformat">
            <field name="name">Encabezado Facturas</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <record id="onmi_turbo_identification_document.onmi_action_report_identification_document" model="ir.actions.report">            
            <field name="paperformat_id" 
              ref="onmi_recitotal_customs.paperformat_identification_document_123">
            </field>    
        </record>
    </data>
</odoo> 