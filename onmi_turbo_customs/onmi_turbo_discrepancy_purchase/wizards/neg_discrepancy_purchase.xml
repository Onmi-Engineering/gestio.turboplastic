<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onmi_view_negative_discrepancy_purchase_form" model="ir.ui.view">
        <field name="name">Negative Discrepancy Purchase</field>
        <field name="model">neg.discrepancy.purchase</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <div>
                        <strong>
                            Indicate qty on every line.
                        </strong>
                    </div>
                </group>
                <group>
                    <field name="order_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <group>
                    <field name="lines_id" nolabel="1">
                        <list editable="top" create="0">
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="purchase_line"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="discrepancy_process" string="Create Discrepancy" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="onmi_act_neg_discrepancy_purchase" model="ir.actions.act_window">
        <field name="name">Negative Discrepancy Purchase</field>
        <field name="res_model">neg.discrepancy.purchase</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="onmi_view_negative_discrepancy_purchase_form"/>
        <field name="target">new</field>
    </record>
</odoo>