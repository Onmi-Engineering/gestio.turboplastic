<odoo>
    <data>
        <record id="onmi_purchase_order_form_inherit_discrepancies" model="ir.ui.view">
            <field name="name">onmi.purchase.order.form.inherit.discrepancies</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_pos_discrep_purchase" type="object" string="Create Positive Discrepancy" invisible="state != 'purchase' or (state == 'purchase' and check_invoices)"/>
                    <button name="action_neg_discrep_purchase" type="object" string="Create Negative Discrepancy" invisible="state != 'purchase' or (state == 'purchase' and check_invoices)"/>
                </xpath>
                <xpath expr="//sheet/div[2]" position="inside">
                    <field name="check_invoices" invisible="1"/>
                    <div name="message_alert" style="color: #e50a0a !important;text-align: center;" invisible="not check_invoices">
                        Discrepancy has been done. Please, you have to check new invoice.
                    </div>
                </xpath>
            </field>
        </record>

        <record id="turboplastic_purchase_order_kpis_tree_inherit_discrep" model="ir.ui.view">
            <field name="name">turboplastic_purchase_order_kpis_tree_inherit_discrep</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_pos_discrep_purchase" type="object" string="Positive Discrepancy"/>
                    <button name="action_neg_discrep_purchase" type="object" string="Negative Discrepancy"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>