<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Form Inherit view sale order -->
        <record id="onmi_purchase_order_form_inherit_add_button_carriage" model="ir.ui.view">
            <field name="name">onmi.purchase.order.form.inherit.add.button.carriage</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_carriage_order" type="object" string="Create carriage order" invisible="state != 'purchase'"/>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_carriage" class="oe_stat_button" icon="fa-truck" invisible="carriage_count == 0" modifiers="{&quot;invisible&quot;: [[&quot;delivery_count&quot;, &quot;=&quot;, 0]]}">
                        <field name="carriage_count" widget="statinfo" string="Carriages" modifiers="{&quot;readonly&quot;: true}"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>