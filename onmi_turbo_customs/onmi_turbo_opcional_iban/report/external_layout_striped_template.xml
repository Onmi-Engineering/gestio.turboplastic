<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="onmi_report_striped_document_inherit" inherit_id="web.external_layout_striped">
            <xpath expr="//div[@class='o_footer_content border-top pt-2 text-center']" position="inside">
                <t t-if="o">
                    <t t-if="o._table == 'account_move'">
                         <ul t-if="o.selected_bank_id" style="list-style:none;">
                            <li>
                                <span t-field="o.selected_bank_id.display_text"
                                      style="color: grey; white-space: pre-line;"/>
                            </li>
                        </ul>
                    </t>
                    <t t-else="">
                        <ul class="list-inline">
                            <div t-field="company.report_footer"/>
                        </ul>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>