<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="onmi_report_striped_document_inherit" inherit_id="web.external_layout_striped">
            <xpath expr="//div[@class='o_footer_content border-top pt-2 text-center']" position="inside">
                <t t-if="o">
                    <t t-if="o._table == 'account_move'">
                         <ul t-if="o.selected_bank_ids" style="list-style:none;">
                             <t t-foreach="o.selected_bank_ids" t-as="bank">
                                <li>
                                    <span t-esc="bank.display_text" t-attf-style="white-space: pre-line; display: block; #{'' if bank_first else 'margin-top: 12px;'}"/>
                                </li>
                             </t>
                        </ul>
                    </t>
                    <t t-else="">
                        <ul class="list-inline">
                            <div t-field="company.report_footer"/>
                        </ul>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>