<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="menu_action_revised_prices" model="ir.actions.server">
            <field name="name">Update Invoiced</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                 records.update_purchase()
            </field>
            <field name="binding_model_id" ref="model_purchase_order"/>
        </record>

        <record id="menu_action_revised_prices_update_check_false" model="ir.actions.server">
            <field name="name">Update check false</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                 records.update_check_false()
            </field>
            <field name="binding_model_id" ref="model_purchase_order"/>
        </record>

        <record id="onmi_view_purchase_order_form_inherit_revised_prices" model="ir.ui.view">
            <field name="name">onmi.purchase.order.form.inherit.revised.prices</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                   <field name="check_revised" readonly="1"/>  
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>