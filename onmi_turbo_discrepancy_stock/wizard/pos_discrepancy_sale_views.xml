<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onmi_view_positive_discrepancy_form" model="ir.ui.view">
        <field name="name">Positive Discrepancy Sale</field>
        <field name="model">pos.discrepancy.sale</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <div>
                        <strong>
                            Indicate qty on every line.
                        </strong>
                    </div>
                </group>
                <group>
                    <field name="order_ids" readonly="1" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="lines_id" nolabel="1">
                        <list editable="top" create="0">
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="order_line"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="discrepancy_process" string="Create Discrepancy" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="onmi_act_pos_discrepancy_sale" model="ir.actions.act_window">
        <field name="name">Positive Discrepancy Sale</field>
        <field name="res_model">pos.discrepancy.sale</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="onmi_view_positive_discrepancy_form"/>
        <field name="target">new</field>
    </record>
</odoo>