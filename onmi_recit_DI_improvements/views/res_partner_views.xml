<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="onmi_res_partner_view_form_inherit_di_v2" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.di.v2</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="check_carrier"/>                
                    
                </xpath>
            </field>
        </record>

        <record id="carrier_partner_tree_view" model="ir.ui.view">
            <field name="name">carrier.partner.tree.view</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">               
                <list>
                    <field name="name"/>                              
                </list>
            </field>            
        </record>

        <record id="action_partner_carrier_tree_view" model="ir.actions.act_window">
            <field name="name">Carrier Partner</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[('check_carrier', '=', True)]</field>
            <field name="view_id" ref="carrier_partner_tree_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'list', 'view_id': ref('carrier_partner_tree_view')}),
                    ]"/>
            <!-- <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a register
                </p>
            </field> -->
        </record>

        <menuitem
        id='menu_partner_carrier'
        parent='contacts.res_partner_menu_config'
        name="Transportistas"
        action='action_partner_carrier_tree_view'
        sequence="60"
       
        />

    </data>
</odoo>