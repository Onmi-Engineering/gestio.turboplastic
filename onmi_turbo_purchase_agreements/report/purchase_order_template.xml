<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_standard2">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6" name="company_address">
                    <span t-if="company.company_details" t-field="company.company_details"></span>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-out="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                   
                </ul>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="external_layout2">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <template id="external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <t t-call="onmi_turbo_purchase_agreements.external_layout_standard2">
                <t t-out="0"/>
            </t>
        </template>
    </template>
    
    <template id="purchase_agreement_document">
              
                <t t-call="onmi_turbo_purchase_agreements.external_layout2">
                    <!-- <t t-set="o" t-value="o.picking_ids.with_context(lang=o.picking_ids. .lang)" /> -->
                    <t t-if="o.picking_ids">
                <t t-set="partner" t-value="o.picking_ids.partner_id or (o.picking_ids.move_lines and o.picking_ids.move_lines[0].partner_id) or False"/>
                <t t-set="address">
                    <div name="div_outgoing_address">
                        <div t-if="o.picking_ids[0].should_print_delivery_address()">
                            <span><strong>Delivery Address:</strong></span>
                            <div t-field="o.picking_ids.move_lines[0].partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div t-elif="o.picking_ids[0].picking_type_id.code != 'internal' and o.picking_ids[0].picking_type_id.warehouse_id.partner_id">
                            <span><strong>Warehouse Address:</strong></span>
                            <div t-field="o.picking_ids[0].picking_type_id.warehouse_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                </t>
                <t t-set="information_block">
                    <div class="row">
                        <div class="col-7" name="div_incoming_address">
                            <div t-if="o.picking_ids[0].picking_type_id.code=='incoming' and partner">
                                <span><strong>Vendor Address:</strong></span>
                            </div>
                            <div t-if="o.picking_ids[0].picking_type_id.code=='internal' and partner">
                                <span><strong>Warehouse Address:</strong></span>
                            </div>
                            <div t-if="o.picking_ids[0].picking_type_id.code=='outgoing' and partner">
                                <span><strong>Customer Address:</strong></span>
                            </div>
                            <div t-if="partner" name="partner_header">
                                <div t-field="partner.commercial_partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                <p t-if="partner.sudo().commercial_partner_id.vat"><t t-esc="o.picking_ids[0].company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="partner.sudo().commercial_partner_id.vat"/></p>
                            </div>
                        </div>
                    </div>
                </t>
                
                            <h2 style="color:black;">
                                <span t-field="o.picking_ids[0].name"/>
                            </h2>
                            <div class="row mt32 mb32">
                                <div t-if="o.name" class="col-auto" name="div_origin">
                                    <strong>Order:</strong>
                                    <p t-field="o.name"/>
                                </div>
                                <div t-if="o.picking_ids[0].state" class="col-auto" name="div_sched_date">
                                    <strong>Shipping Date:</strong>
                                    <t t-if="o.picking_ids[0].state == 'done'">
                                        <p t-field="o.picking_ids[0].date_done"/>
                                    </t> 
                                    <t t-if="o.picking_ids[0].state != 'done'"> 
                                        <p t-field="o.picking_ids[0].scheduled_date"/> 
                                   </t> 
                                </div>
                                <!-- <div t-if="o.picking_ids[0].weighing_ids" class="col-auto" name="div_date_planned">
                                    <strong>Date weigh-in:</strong>
                                    <p t-if="o.picking_ids[0].date_planned" t-field="o.picking_ids.date_planned" />
                                </div>
                                <div class="col-auto" name="div_license_plate">
                                    <strong>License plate:</strong>
                                    <p t-field="o.picking_ids[0].license_plate_id.name"/>
                                </div>
                                <div class="col-auto" name="div_trailer">
                                    <strong>Trailer:</strong>
                                    <p t-field="o.picking_ids[0].trailer_id.name"/>
                                </div> -->
                            </div>
                            <table class="table table-sm" name="stock_move_table">
                                <thead>
                                    <tr>
                                        <th name="th_sm_product"><strong>Product</strong></th>
                                        <th name="th_sm_ordered"><strong>Ordered</strong></th>
                                        <t t-set="was" t-value="o.picking_ids.move_lines.filtered(lambda x: x.waste_qty > 0)"/>                                     
                                        <th name="th_sm_quantity"><strong>Delivered</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="lines" t-value="o.picking_ids[0].move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                    <tr t-foreach="lines" t-as="move">
                                        <td>
                                            <span t-field="move.product_id"/>
                                            <p t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                                <span t-field="move.description_picking"/>
                                            </p>
                                        </td>
                                        <td>
                                            <span t-field="move.product_qty_picking"/>
                                            <span t-field="move.product_uom"/>
                                        </td>                      
                                        <td>
                                            <span t-field="move.product_qty_picking"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table table-sm mt48" style="width:50%;margin-left: 50%;">
                                
                                <tr width="50%">
                                    <th style="text-align: center;">
                                        <strong>Total </strong>
                                    </th>                         
                                </tr>
                                <tr width="50%">
                                    <td style="text-align: center;">
                                        <span t-field="o.picking_ids[0].product_qty_total"/> kg
                                    </td>                                  
                                </tr>
                            </table> 
                        </t>
                </t>     
    </template>

    <template id="onmi_report_purchae_agreement_document_inherit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">   
                    <t t-call="onmi_turbo_purchase_agreements.purchase_agreement_document" t-lang="o.partner_id.lang"/>   
            </t>
        </t>
    </template>

    <record id="onmi_cosmi_report_purchase_agreements_moyca" model="ir.actions.report">
        <field name="name">Albar√°n</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">onmi_turbo_purchase_agreements.onmi_report_purchae_agreement_document_inherit</field>
        <field name="report_file">onmi_turbo_purchase_agreements.onmi_report_purchae_agreement_document_inherit</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_custom_moyca" model="report.paperformat">
        <field name="name">Custom moyca</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">38</field>
        <field name="dpi">90</field>
    </record>

    <record id="onmi_turbo_purchase_agreements.onmi_cosmi_report_purchase_agreements_moyca" model="ir.actions.report">
        <field name="paperformat_id" ref="onmi_turbo_purchase_agreements.paperformat_custom_moyca"/>
    </record>



</odoo>